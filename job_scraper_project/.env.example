# Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=job-scraper
LOG_LEVEL=INFO
OUTPUT_FORMAT=json
MAX_RETRIES=3
TIMEOUT=30

# Proxy Configuration (optional)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080

# API Keys (if using real implementations)
# LINKEDIN_API_KEY=your_api_key_here
# INDEED_API_KEY=your_api_key_here
# GLASSDOOR_API_KEY=your_api_key_here

# OSINT API Keys (optional)
# PHONE_LOOKUP_API_KEY=your_api_key_here
# EMAIL_BREACH_API_KEY=your_api_key_here

# Database Configuration (optional, for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/jobscraper

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
